{
  "name": "admin-panel",
  "type": "module",
  "version": "1.0.0",
  "description": "Basically, project to manage companies and their employees. Mini-CRM.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --runInBand --detectOpenHandles --watchAll",
    "dev": "nodemon server.js",
    "database": "/mongodb/bin/mongod.exe --dbpath=/mongodb-data",
    "client": "npm start --prefix client",
    "clientinstall": "npm install --prefix client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeraldHero/Admin-Panel.git"
  },
  "keywords": [
    "admin",
    "panel",
    "company",
    "fullstackHQ"
  ],
  "author": "Gerald Hug",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GeraldHero/Admin-Panel/issues"
  },
  "homepage": "https://github.com/GeraldHero/Admin-Panel#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "jest": "^27.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "platform": "^1.3.6",
    "sharp": "^0.29.3",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6"
  }
